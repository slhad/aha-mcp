{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "HASS_ACCESS_TOKEN",
            "description": "Home Assistant Access Token",
            "type": "promptString"
        },
        {
            "id": "HASS_URL",
            "description": "Home Assistant URL",
            "type": "promptString"
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "STDIO/npm",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "start:stdio"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "STDIO/native",
            "runtimeExecutable": "tsx",
            "cwd": "${workspaceFolder}",
            "args": [
                "src/index.ts"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "SSE/npm",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "start:local:sse"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "SSE/native",
            "runtimeExecutable": "tsx",
            "cwd": "${workspaceFolder}",
            "args": [
                ".",
                "sse"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "HTTP/npm",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "start:local:http"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "HTTP/native",
            "runtimeExecutable": "tsx",
            "cwd": "${workspaceFolder}",
            "args": [
                ".",
                "http"
            ],
            "env": {
                "RESOURCES_TO_TOOLS": "true",
                "DEBUG": "true",
                "HASS_ACCESS_TOKEN": "${input:HASS_ACCESS_TOKEN}",
                "HASS_URL": "${input:HASS_URL}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Smithery",
            "runtimeExecutable": "npm",
            "cwd": "${workspaceFolder}",
            "args": [
                "run",
                "dev"
            ]
        }
    ]
}