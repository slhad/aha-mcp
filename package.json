{
    "name": "hass-mcp",
    "version": "0.1.0",
    "description": "Home Assistant MCP Server",
    "main": "src/index.ts",
    "type": "module",
    "scripts": {
        "start": "tsx .",
        "docker": "docker build -t aha-mcp .",
        "podman": "podman build -t aha-mcp .",
        "predocker": "npm test",
        "prepodman": "npm test",
        "preformat": "npm run check",
        "pretest": "npm run format",
        "test": "vitest run",
        "pretest:short": "npm run format",
        "test:short": "vitest --run --silent --no-color --hideSkippedTests  --reporter=default",
        "check": "tsc --noEmit",
        "format": "eslint --fix ."
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.3",
        "home-assistant-js-websocket": "^8.2.0",
        "zod-to-json-schema": "^3.24.6"
    },
    "devDependencies": {
        "@types/node": "^20.8.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.57.1",
        "tsx": "^4.7.0",
        "typescript": "^5.2.2",
        "vitest": "^3.2.4"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
